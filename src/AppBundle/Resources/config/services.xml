<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="app.form.type.email.class">AppBundle\Form\Type\EmailType</parameter>
    </parameters>

    <services>

        <service id="app.form.type.email" class="%app.form.type.email.class%">
            <tag name="form.type" alias="app_email"/>
        </service>

    </services>

</container>
